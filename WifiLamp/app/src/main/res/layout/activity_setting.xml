<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/setting_back"
            android:layout_toRightOf="@+id/setting_back"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/change_ip"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:hint="@string/setting_tv_1"
            android:textColorHint="@color/tabUnSelected"
            android:textColor="@color/tabUnSelected"
            android:textSize="16sp"
            android:background="@drawable/white_shape"/>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/change_port"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:hint="@string/setting_tv_2"
            android:textColorHint="@color/tabUnSelected"
            android:textColor="@color/tabUnSelected"
            android:textSize="16sp"
            android:background="@drawable/white_shape"/>

    </LinearLayout>

    <Button
        android:id="@+id/restart"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:background="@drawable/yellow_shape"
        android:text="@string/restart"
        android:textColor="@color/white_2"
        android:textSize="18sp" />

</LinearLayout>