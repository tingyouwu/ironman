<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_main_color</item>
        <item name="colorPrimaryDark">@color/app_main_color</item>
        <item name="colorAccent">@color/app_main_color</item>
    </style>

    <style name="function_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="seek_bar_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tabUnSelected</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="seek_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">37dp</item>
        <item name="android:layout_marginRight">37dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>
        <item name="android:thumb">@mipmap/seek_bar_thumb</item>
    </style>

</resources>
